<table>
    <thead>
        <tr>
            <th>N.</th>
            <th>Title</th>
            <th>Description</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        {{#each tasks}}
        <tr>
            <td>{{@index}}</td>
            <td>{{title}}</td>
            <td> {{description}} </td>
            <td>
                {{#if done}}
                    <button><a href="/tasks/{{_id}}/toggleDone">Undone</a></button>
                {{else}}
                    <button><a href="/tasks/{{_id}}/toggleDone">Done</a></button>
                {{/if}}

                <button><a href="/tasks/{{_id}}/delete">Delete</a></button>
                <button><a href="/tasks/{{_id}}/edit">Edit</a></button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>